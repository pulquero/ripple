#
# Sesame configuration template for a native repository with linked data
#
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix rep: <http://www.openrdf.org/config/repository#>.
@prefix sr: <http://www.openrdf.org/config/repository/sail#>.
@prefix sail: <http://www.openrdf.org/config/sail#>.
@prefix ns: <http://www.openrdf.org/config/sail/native#>.

[] a rep:Repository ;
   rep:repositoryID "{%Repository ID|native-linked-data%}" ;
   rdfs:label "{%Repository title|Native store with linked data%}" ;
   rep:repositoryImpl [
      rep:repositoryType "openrdf:SailRepository" ;
      sr:sailImpl [
         sail:sailType "ripple:LinkedDataSail" ;
	        sail:delegate [
	           sail:sailType "openrdf:NativeStore" ;
	    sail:iterationCacheSyncThreshold "{%Query Iteration Cache size|10000%}";
            ns:tripleIndexes "{%Triple indexes|spoc,posc%}"
	        ]
      ]
   ].
